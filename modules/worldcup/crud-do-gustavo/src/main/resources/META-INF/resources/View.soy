    <div class="container-fluid-1280" id="{$id}">

        <div class="row">
            <div class="table-responsive">

                <table class="table table-autofit table-hover table-list">
                    <thead>
                    <tr>
                        <th class="table-cell-content"> Id</th>
                        <th class="table-cell-content"> Name</th>
                        <th class="table-cell-content"> Cool guy?</th>
                        <th class="table-cell-content"> Value</th>
                        <th class="table-cell-content"> Date </th>
                        <th class="table-cell-content"> </th>
                        <th class="lfr-entry-action-column "> &nbsp; </th>
                        <th class="lfr-entry-action-column "> &nbsp; </th>
                    </tr>
                    </thead>
                    <tbody>
                        {if length($ListFoos) > 0}
                            {foreach $foo in $ListFoos}
                            <tr>
                                <td class="lfr-entry-action-column">
                                    <a class="btn" href="{$foo.editUrl}">
                                        {$foo.fooId}
                                        <span class="icon-pencil"></span>
                                    </a>
                                </td>
                                <td class="table-cell-content">{$foo.field1}</td>
                                <td class="table-cell-content">{$foo.field2 ? 'Yes' : 'No'}</td>
                                <td class="table-cell-content">{$foo.field3}</td>
                                <td class="table-cell-content">{$foo.field4}</td>
                                <td class="lfr-entry-action-column" colspan="1">
                                    <button class="btn delete" type="submit">
                                        <span class="icon-trash"></span>
                                    </button>
                                </td>
                            </tr>
                            {/foreach}
                        {else}
                        <tr>
                            <td class=" lfr-entry-action-column" colspan="2">
                                No datta available.
                            </td>
                        </tr>
                        {/if}
                    </tbody>
                </table>
            </div>
        </div>

		{if $EditFooUrl}
