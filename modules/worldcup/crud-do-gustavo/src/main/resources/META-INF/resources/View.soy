{namespace View}

/**
 * Prints the portlet main view.
 */
{template .render}
	{@param id: string}
	{@param? EditFooUrl: string}
    {@param ListFoos: list<[
            fooId: int,
            field1: string,
            field2: bool,
            field3: int,
            field4: string,
            editUrl: string,
            deleteUrl: string
    ]>}

	{let $body kind="html"}
        <b>Success</b>
	{/let}

	{let $closeButtonHtml kind="html"}
        <span class="icon-16-cancel"></span>
	{/let}

